<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>icono.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <!-- Asegúrate de que icono.ico esté en la raíz del proyecto o ajusta la ruta -->
    <Content Include="icono.ico" />
  </ItemGroup>

  <ItemGroup>
    <!-- Excluimos los PNG/ICO de Resources como None (para no duplicarlos) -->
    <!-- Estas líneas son para evitar que VS los trate como recursos incrustados si ya están en Content -->
    <None Remove="Icons\add_bookmark.png" />
    <None Remove="Icons\ai.png" />
    <None Remove="Icons\audio_playing_icon.png" />
    <None Remove="Icons\blocked_icon.png" />
    <None Remove="Icons\bookmarks.png" />
    <None Remove="Icons\data_extraction.png" />
    <None Remove="Icons\download.png" />
    <None Remove="Icons\extensions.png" />
    <None Remove="Icons\extension_icon.png" />
    <None Remove="Icons\find.png" />
    <None Remove="Icons\gemini_icon.ico" />
    <None Remove="Icons\globe_icon.png" />
    <None Remove="Icons\history.png" />
    <None Remove="Icons\home.png" />
    <None Remove="Icons\incognito.png" />
    <None Remove="Icons\microphone.png" />
    <None Remove="Icons\moon.png" />
    <None Remove="Icons\new_tab.png" />
    <None Remove="Icons\password.png" />
    <None Remove="Icons\performance.png" />
    <None Remove="Icons\permissions.png" />
    <None Remove="Icons\pip.png" />
    <None Remove="Icons\read_aloud.png" />
    <None Remove="Icons\reader.png" />
    <None Remove="Icons\screenshot.png" />
    <None Remove="Icons\settings.png" />
    <None Remove="Icons\split.png" />
    <None Remove="Icons\tab_manager.png" />
    <None Remove="Icons\sun.png" />
    <None Remove="Icons\speaker.png" />
    <None Remove="Icons\toolbar_bottom.png" />
    <None Remove="Icons\toolbar_left.png" />
    <None Remove="Icons\toolbar_right.png" />
    <None Remove="Icons\toolbar_top.png" />
    <None Remove="Icons\translate.png" />
    <None Remove="Icons\back.png" />
    <None Remove="Icons\forward.png" />
    <None Remove="Icons\refresh.png" />
  </ItemGroup>

  <ItemGroup>
    <!-- Paquetes NuGet -->
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2651.64" />
    <PackageReference Include="System.Speech" Version="8.0.0" />
    <!-- Versión segura de System.Text.Json (actualizada para evitar vulnerabilidades) -->
    <PackageReference Include="System.Text.Json" Version="9.0.0" /> <!-- ¡ACTUALIZADO! -->
  </ItemGroup>

  <!-- Copiar todos los PNG/ICO de la carpeta 'Icons' al directorio de salida -->
  <ItemGroup>
    <Content Include="Icons\*.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Icons\*.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
