<Window x:Class="NavegadorWeb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavegadorWeb"
        mc:Ignorable="d"
        Title="Aurora Browser" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Background="{DynamicResource WindowBackgroundBrush}"> <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Color x:Key="DefaultBrowserBackgroundColor">#E9EFF5</Color>
        <Color x:Key="DefaultBrowserForegroundColor">#333333</Color>
        <SolidColorBrush x:Key="DefaultBrowserBackgroundBrush" Color="{StaticResource DefaultBrowserBackgroundColor}"/>
        <SolidColorBrush x:Key="DefaultBrowserForegroundBrush" Color="{StaticResource DefaultBrowserForegroundColor}"/>

        <Color x:Key="GeminiBackgroundColor">#9B59B6</Color> <Color x:Key="GeminiForegroundColor">#FFFFFF</Color> <SolidColorBrush x:Key="GeminiBackgroundBrush" Color="{StaticResource GeminiBackgroundColor}"/>
        <SolidColorBrush x:Key="GeminiForegroundBrush" Color="{StaticResource GeminiForegroundColor}"/>

        <Color x:Key="BrowserBackgroundColor">#E9EFF5</Color> <Color x:Key="BrowserForegroundColor">#333333</Color> <SolidColorBrush x:Key="BrowserBackgroundBrush" Color="{DynamicResource BrowserBackgroundColor}"/>
        <SolidColorBrush x:Key="BrowserForegroundBrush" Color="{DynamicResource BrowserForegroundColor}"/>

        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Foreground" Value="{DynamicResource BrowserForegroundColor}"/> <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/> <Setter Property="Foreground" Value="#000000"/> </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/> </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BrowserBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BrowserForegroundColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BrowserForegroundColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BrowserForegroundColor}"/>
                    <Setter Property="Foreground" Value="{DynamicResource BrowserBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BrowserForegroundColor}"/>
                    <Setter Property="Foreground" Value="{DynamicResource BrowserBackgroundBrush}"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FindTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="{DynamicResource BrowserForegroundColor}"/>
            <Setter Property="Background" Value="{DynamicResource BrowserBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource BrowserForegroundColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#66B3FF"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3399FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UrlTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource FindTextBoxStyle}">
            <EventSetter Event="ContextMenuOpening" Handler="UrlTextBox_ContextMenuOpening"/>
        </Style>

    </Window.Resources>

    <Border BorderThickness="1" BorderBrush="{DynamicResource BrowserBackgroundBrush}" CornerRadius="8"> <Grid x:Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Height="30" Background="{DynamicResource BrowserBackgroundBrush}" MouseLeftButtonDown="Window_Drag"> <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="/NavegadorWeb;component/Resources/logo.png" Width="16" Height="16" Margin="5,0,0,0" VerticalAlignment="Center"/>

                <TextBlock x:Name="WindowTitleText" Grid.Column="1" Text="Aurora Browser" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="SemiBold" Foreground="{DynamicResource BrowserForegroundColor}"/> <Button x:Name="AIButton_TitleBar" Grid.Column="2" Content="🧠" Style="{StaticResource ToolbarButtonStyle}" Click="AIButton_Click" HorizontalAlignment="Right" ToolTip="Abrir Gemini en pantalla dividida"/>
                <Button x:Name="MinimizeButton" Grid.Column="3" Content="🗕" Style="{StaticResource ToolbarButtonStyle}" Click="MinimizeButton_Click"/>
                <Button x:Name="MaximizeRestoreButton" Grid.Column="4" Content="⬜" Style="{StaticResource ToolbarButtonStyle}" Click="MaximizeRestoreButton_Click"/>
                <Button x:Name="CloseButton" Grid.Column="5" Content="✕" Style="{StaticResource ToolbarButtonStyle}" Click="CloseButton_Click"/>
            </Grid>

            <DockPanel Grid.Row="1" Grid.Column="0" x:Name="MainToolbarContainer" Background="{DynamicResource BrowserBackgroundBrush}" BorderBrush="{DynamicResource BrowserForegroundColor}" BorderThickness="0,0,0,1"> </DockPanel>

            <Border x:Name="LeftToolbarPlaceholder" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource BrowserForegroundColor}" Background="{DynamicResource BrowserBackgroundBrush}" Visibility="Collapsed" Width="0">
                <StackPanel Orientation="Vertical">
                    </StackPanel>
            </Border>

            <Border x:Name="RightToolbarPlaceholder" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" BorderThickness="1,0,0,0" BorderBrush="{DynamicResource BrowserForegroundColor}" Background="{DynamicResource BrowserBackgroundBrush}" Visibility="Collapsed" Width="0">
                <StackPanel Orientation="Vertical">
                    </StackPanel>
            </Border>

            <TabControl Grid.Row="2" Grid.Column="0" x:Name="TabGroupContainer" SelectionChanged="BrowserTabControl_SelectionChanged_Grouped"
                        BorderThickness="0" Background="{DynamicResource BrowserBackgroundBrush}"> <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <Border Background="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsSelected, Converter={StaticResource SelectedTabBackgroundConverter}, ConverterParameter={StaticResource BrowserBackgroundBrush}}">
                                        <DockPanel>
                                            <ContentPresenter Content="{Binding}" ContentTemplate="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=Header}"/>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="IsHitTestVisible" Value="True"/>
                        <Setter Property="Focusable" Value="False"/>
                    </Style>

                    <Style TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
                        <Setter Property="Width" Value="20"/>
                        <Setter Property="Height" Value="20"/>
                        <Setter Property="Margin" Value="5,0,0,0"/>
                    </Style>
                </TabControl.Resources>
            </TabControl>


            <Border x:Name="FindBar" Grid.Row="2" Grid.Column="0" Margin="10" Padding="5" Background="{DynamicResource BrowserBackgroundBrush}" BorderBrush="{DynamicResource BrowserForegroundColor}" BorderThickness="1" CornerRadius="5" Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="FindTextBox" Width="150" TextChanged="FindTextBox_TextChanged" KeyDown="FindTextBox_KeyDown" Style="{StaticResource FindTextBoxStyle}"/>
                    <TextBlock x:Name="FindResultsTextBlock" Text="0/0" Margin="5,0,5,0" VerticalAlignment="Center" Foreground="{DynamicResource BrowserForegroundColor}"/>
                    <Button Content="▲" Click="FindPreviousButton_Click" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Anterior"/>
                    <Button Content="▼" Click="FindNextButton_Click" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Siguiente"/>
                    <Button Content="✖" Click="CloseFindBarButton_Click" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Cerrar búsqueda"/>
                </StackPanel>
            </Border>

            <Grid x:Name="UrlAndProgressGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="UrlTextBox" Grid.Row="0" Grid.Column="0" KeyDown="UrlTextBox_KeyDown" Margin="5,5,0,5" Style="{StaticResource UrlTextBoxStyle}">
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Abrir en nueva pestaña" Click="OpenInNewTabMenuItem_Click"/>
                            <MenuItem Header="Abrir en nueva pestaña de incógnito" Click="OpenInNewIncognitoTabMenuItem_Click"/>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0">
                    <Button x:Name="GoButton" Content="Go" Click="GoButton_Click" Width="30" Height="25" Margin="0,0,5,0" Style="{StaticResource ToolbarButtonStyle}"/>
                    <Button x:Name="HomeButton" Content="🏠" Click="HomeButton_Click" Width="30" Height="25" Margin="0,0,5,0" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Ir a la página de inicio"/>
                </StackPanel>

                <ProgressBar x:Name="LoadingProgressBar" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="5" Margin="0,0,0,0" Value="0" IsIndeterminate="True" Visibility="Collapsed"/>
            </Grid>

        </Grid>
    </Border>
</Window>
