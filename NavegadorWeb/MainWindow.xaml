<Window x:Class="NavegadorWeb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavegadorWeb"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Aurora Browser" Height="768" Width="1024"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SourceInitialized="MainWindow_SourceInitialized"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <!-- Colores por defecto para el navegador. Puedes ajustarlos o moverlos a App.xaml -->
        <Color x:Key="DefaultBrowserBackgroundColor">#282c34</Color> <!-- Gris azulado oscuro -->
        <SolidColorBrush x:Key="DefaultBrowserBackgroundBrush" Color="{StaticResource DefaultBrowserBackgroundColor}"/>

        <Color x:Key="DefaultBrowserForegroundColor">#abb2bf</Color> <!-- Color de texto claro -->
        <SolidColorBrush x:Key="DefaultBrowserForegroundBrush" Color="{StaticResource DefaultBrowserForegroundColor}"/>

        <Color x:Key="GeminiBackgroundColor">#343a40</Color> <!-- Un gris más oscuro para barras/bordes -->
        <SolidColorBrush x:Key="GeminiBackgroundBrush" Color="{StaticResource GeminiBackgroundColor}"/>

        <!-- Estilo básico para botones de navegación/control -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DefaultBrowserForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444a54"/> <!-- Un poco más claro al pasar el ratón -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555c66"/> <!-- Más claro al presionar -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para la barra de direcciones -->
        <Style x:Key="AddressBarTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3d424b"/> <!-- Fondo ligeramente más claro para la barra de direcciones -->
            <Setter Property="Foreground" Value="{StaticResource DefaultBrowserForegroundColor}"/>
            <Setter Property="BorderBrush" Value="#555c66"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2,5,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"> <!-- Borde redondeado -->
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007bff"/> <!-- Borde azul al pasar el ratón -->
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007bff"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para las pestañas del navegador (encabezado de la pestaña) -->
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Icono de la página (favicon) -->
                            <Image Grid.Column="0" Source="{Binding FaviconSource}" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <!-- Título de la página -->
                            <TextBlock Grid.Column="1" Text="{Binding Title}" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource DefaultBrowserForegroundColor}"/>
                            <!-- Botón de cerrar pestaña -->
                            <Button Grid.Column="2" Content="x"
                                    Command="{Binding CloseTabCommand}"
                                    Style="{StaticResource TabCloseButtonStyle}"/>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource GeminiBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DefaultBrowserForegroundColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GeminiBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid SnapsToDevicePixels="true">
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5,5,0,0">
                                <ContentPresenter x:Name="ContentSite"
                                                  ContentSource="Header"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource DefaultBrowserBackgroundColor}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource DefaultBrowserBackgroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3a3e47"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el botón de cerrar pestaña (dentro del encabezado de la pestaña) -->
        <Style x:Key="TabCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DefaultBrowserForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="9">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="DarkRed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplate para el contenido de cada TabItem (el WebView2) -->
        <DataTemplate x:Key="TabContentTemplate">
            <wv2:WebView2 Source="{Binding CurrentUrl}" x:Name="BrowserWebView" />
        </DataTemplate>

        <!-- Template para el encabezado de las pestañas -->
        <DataTemplate x:Key="TabHeaderTemplate">
            <StackPanel Orientation="Horizontal" Tag="{Binding}">
                <TextBlock Text="{Binding Title}" Margin="0,0,5,0" />
                <Button Content="X" Command="{Binding CloseTabCommand}" Style="{StaticResource TabCloseButtonStyle}"/>
            </StackPanel>
        </DataTemplate>

    </Window.Resources>

    <Border Background="{StaticResource DefaultBrowserBackgroundBrush}"
            BorderBrush="{StaticResource GeminiBackgroundBrush}"
            BorderThickness="1"
            CornerRadius="8"
            MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">

        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Fila para la barra de título personalizada -->
                <RowDefinition Height="Auto"/> <!-- Fila para los botones de navegación y barra de dirección -->
                <RowDefinition Height="Auto"/> <!-- Fila para la barra de búsqueda (Find Bar) -->
                <RowDefinition Height="*"/>   <!-- Fila principal para el contenido del navegador (TabControl) -->
                <RowDefinition Height="Auto"/> <!-- Fila para la barra de progreso de descarga -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" x:Name="TitleBarGrid" Height="30" Background="{StaticResource GeminiBackgroundBrush}"
                  MouseLeftButtonDown="TitleBarGrid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Title}" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Foreground="{StaticResource DefaultBrowserForegroundColor}" FontWeight="Bold"/>

                <Button x:Name="MinimizeButton" Grid.Column="1" Content="—" Click="MinimizeButton_Click"
                        Style="{StaticResource NavigationButtonStyle}"/>
                <Button x:Name="MaximizeRestoreButton" Grid.Column="2" Content="◻" Click="MaximizeRestoreButton_Click"
                        Style="{StaticResource NavigationButtonStyle}"/>
                <Button x:Name="CloseButton" Grid.Column="3" Content="✕" Click="CloseButton_Click"
                        Style="{StaticResource NavigationButtonStyle}"/>
            </Grid>

            <!-- Navigation Bar (Buttons and Address Bar) -->
            <Grid Grid.Row="1" Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Botones de navegación (Atrás, Adelante, Recargar, Inicio) -->
                    <ColumnDefinition Width="*"/>   <!-- Barra de direcciones -->
                    <ColumnDefinition Width="Auto"/> <!-- Botón de nueva pestaña -->
                    <ColumnDefinition Width="Auto"/> <!-- Otros botones (Configuración, Historial, etc.) -->
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0">
                    <Button x:Name="BackButton" Click="BackButton_Click" ToolTip="Go Back" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/back.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="ForwardButton" Click="ForwardButton_Click" ToolTip="Go Forward" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/forward.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="RefreshButton" Click="RefreshButton_Click" ToolTip="Refresh" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/refresh.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="HomeButton" Click="HomeButton_Click" ToolTip="Go Home" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/home.png" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <!-- Barra de direcciones - ¡Asegúrate de que 'x:Name="AddressBar"' esté aquí! -->
                <TextBox x:Name="AddressBar"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         Margin="5,0"
                         KeyDown="AddressBar_KeyDown"
                         GotFocus="AddressBar_GotFocus"
                         LostFocus="AddressBar_LostFocus"
                         Style="{StaticResource AddressBarTextBoxStyle}"/>

                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                    <Button x:Name="NewTabButton" Click="NewTabButton_Click" ToolTip="New Tab" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/new_tab.png" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="3" VerticalAlignment="Center" Margin="5,0,0,0">
                    <Button x:Name="HistoryButton" Click="HistoryButton_Click" ToolTip="History" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/history.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="SettingsButton" Click="SettingsButton_Click" ToolTip="Settings" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/settings.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="FindButton" Click="FindButton_Click" ToolTip="Find in page" Style="{StaticResource NavigationButtonStyle}">
                        <Image Source="/Icons/find.png" Width="20" Height="20"/>
                    </Button>
                    <!-- Otros botones aquí si los tienes, como Bookmarks, Extensions, etc. -->
                </StackPanel>
            </Grid>

            <!-- Find Bar (initially Collapsed) -->
            <Border x:Name="FindBar"
                    Grid.Row="2" Grid.Column="0"
                    Visibility="Collapsed"
                    BorderBrush="{StaticResource DefaultBrowserForegroundColor}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="5" Padding="5"
                    Background="{StaticResource GeminiBackgroundBrush}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBox x:Name="FindTextBox"
                             Width="200"
                             Margin="0,0,5,0"
                             TextChanged="FindTextBox_TextChanged"
                             KeyDown="FindTextBox_KeyDown"
                             Style="{StaticResource AddressBarTextBoxStyle}"/>
                    <Button Content="▲"
                            Click="FindPreviousButton_Click"
                            Margin="0,0,5,0"
                            ToolTip="Find previous"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button Content="▼"
                            Click="FindNextButton_Click"
                            Margin="0,0,5,0"
                            ToolTip="Find next"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button Content="✖"
                            Click="CloseFindBarButton_Click"
                            ToolTip="Close search"
                            Style="{StaticResource NavigationButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- Main Browser Content (Tabs) -->
            <TabControl x:Name="BrowserTabs"
                        Grid.Row="3" Grid.Column="0"
                        ItemsSource="{Binding TabGroupManager.SelectedTabGroup.TabsInGroup}"
                        SelectedItem="{Binding SelectedTabItem, Mode=TwoWay}"
                        SelectionChanged="BrowserTabControl_SelectionChanged_Grouped"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        ItemContainerStyle="{StaticResource TabItemStyle}"
                        ItemTemplate="{StaticResource TabHeaderTemplate}"
                        ContentTemplate="{StaticResource TabContentTemplate}">  <!-- ¡Esta es la línea clave y corregida! -->
            </TabControl>

            <!-- Download progress bar (Optional) -->
            <ProgressBar Grid.Row="4"
                         Height="5"
                         Value="{Binding DownloadProgress}"
                         Visibility="{Binding DownloadProgressBarVisibility}"
                         Background="#333" Foreground="#007bff"
                         BorderThickness="0"
                         Margin="0,0,0,0"
                         VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</Window>
