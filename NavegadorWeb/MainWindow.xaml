<Window x:Class="NavegadorWeb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavegadorWeb"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Aurora Browser" Height="768" Width="1024"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SourceInitialized="MainWindow_SourceInitialized"
        StateChanged="MainWindow_StateChanged">

    <Window.Resources>
        <Color x:Key="DefaultBrowserBackgroundColor">#282c34</Color> <SolidColorBrush x:Key="DefaultBrowserBackgroundBrush" Color="{StaticResource DefaultBrowserBackgroundColor}"/>

        <Color x:Key="DefaultBrowserForegroundColor">#abb2bf</Color> <SolidColorBrush x:Key="DefaultBrowserForegroundBrush" Color="{StaticResource DefaultBrowserForegroundColor}"/>

        <Color x:Key="GeminiBackgroundColor">#343a40</Color> <SolidColorBrush x:Key="GeminiBackgroundBrush" Color="{StaticResource GeminiBackgroundColor}"/>

        <Color x:Key="GeminiForegroundColor">#e0e6f1</Color> <SolidColorBrush x:Key="GeminiForegroundBrush" Color="{StaticResource GeminiForegroundColor}"/>

        <Style x:Key="TabItemStyle" TargetType="{x:Type TabItem}">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" ToolTip="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Content.Url}">
                            <Image Source="{Binding Favicon}" Width="16" Height="16" Margin="0,0,5,0" />
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Foreground="{StaticResource DefaultBrowserForegroundBrush}"/>
                            <Button Content="x" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabControl}}, Path=DataContext.CloseTabCommand}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                    Margin="5,0,0,0"
                                    Width="16" Height="16"
                                    VerticalAlignment="Center"
                                    ToolTip="Close tab"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource DefaultBrowserBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DefaultBrowserBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DefaultBrowserForegroundColor}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="{TemplateBinding Padding}"
                                        RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource GeminiBackgroundColor}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource GeminiBackgroundColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource GeminiForegroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource GeminiBackgroundColor}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource GeminiBackgroundColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="TabHeaderTemplate">
            <StackPanel Orientation="Horizontal" ToolTip="{Binding Url}">
                <Image Source="{Binding Favicon}" Width="16" Height="16" Margin="0,0,5,0" Stretch="Uniform"/>
                <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Foreground="{StaticResource DefaultBrowserForegroundColor}"/>
                <Button Content="✖"
                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabControl}}, Path=DataContext.CloseTabCommand}"
                        CommandParameter="{Binding}"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Margin="5,0,0,0"
                        Width="16" Height="16"
                        VerticalAlignment="Center"
                        ToolTip="Cerrar pestaña"
                        Background="Transparent" BorderBrush="Transparent" Foreground="{StaticResource DefaultBrowserForegroundColor}" Padding="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                  Content="{TemplateBinding Content}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TabContentTemplate">
            <Grid>
                <wv2:WebView2 Name="WebView" Source="{Binding Url}" />
            </Grid>
        </DataTemplate>

    </Window.Resources>

    <Border Background="{StaticResource DefaultBrowserBackgroundBrush}"
            CornerRadius="8"
            BorderThickness="1"
            BorderBrush="#3a3f4b">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Background="{StaticResource DefaultBrowserBackgroundBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Icons/app.ico" Width="16" Height="16" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="0"/>
                <TextBlock Text="{Binding Title}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                           Margin="10,0" Foreground="{StaticResource DefaultBrowserForegroundColor}"/>

                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Content="—" Click="MinimizeButton_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Background="Transparent" BorderBrush="Transparent" Foreground="{StaticResource DefaultBrowserForegroundColor}" Width="30" Height="30"
                            ToolTip="Minimizar"/>
                    <Button Content="▢" Click="MaximizeRestoreButton_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Background="Transparent" BorderBrush="Transparent" Foreground="{StaticResource DefaultBrowserForegroundColor}" Width="30" Height="30"
                            ToolTip="Maximizar/Restaurar"/>
                    <Button Content="✕" Click="CloseButton_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Background="#e81123" Foreground="White" Width="30" Height="30"
                            ToolTip="Cerrar"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="10,5,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="TabGroupComboBox"
                          Grid.Column="0"
                          ItemsSource="{Binding TabGroupManager.TabGroups}"
                          SelectedItem="{Binding TabGroupManager.SelectedTabGroup, Mode=TwoWay}"
                          DisplayMemberPath="GroupName"
                          Height="30"
                          VerticalContentAlignment="Center"
                          Margin="0,0,5,0"
                          Foreground="{StaticResource DefaultBrowserForegroundColor}"
                          Background="{StaticResource GeminiBackgroundColor}"
                          BorderBrush="{StaticResource GeminiBackgroundColor}"/>

                <Button x:Name="AddNewGroupButton"
                        Grid.Column="1"
                        Content="+"
                        Width="30" Height="30"
                        Command="{Binding AddNewTabGroupCommand}"
                        ToolTip="Nueva ventana"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <Button x:Name="RemoveGroupButton"
                        Grid.Column="2"
                        Content="-"
                        Width="30" Height="30"
                        Command="{Binding RemoveSelectedTabGroupCommand}"
                        ToolTip="Cerrar ventana"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>
            </Grid>

            <Grid Grid.Row="2" Margin="10,5,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" Grid.Column="0" Content="&#x2190;"
                        Command="{Binding GoBackCommand}"
                        Width="30" Height="30" Margin="0,0,5,0"
                        ToolTip="Atrás"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <Button x:Name="ForwardButton" Grid.Column="1" Content="&#x2192;"
                        Command="{Binding GoForwardCommand}"
                        Width="30" Height="30" Margin="0,0,5,0"
                        ToolTip="Adelante"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <Button x:Name="RefreshButton" Grid.Column="2" Content="&#x21BB;"
                        Command="{Binding RefreshCommand}"
                        Width="30" Height="30" Margin="0,0,5,0"
                        ToolTip="Recargar"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <TextBox x:Name="AddressBar" Grid.Column="3"
                         Text="{Binding SelectedTabItem.Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         KeyDown="AddressBar_KeyDown"
                         VerticalContentAlignment="Center"
                         Height="30" Margin="0,0,5,0"
                         Foreground="{StaticResource DefaultBrowserForegroundColor}"
                         Background="{StaticResource GeminiBackgroundColor}"
                         BorderBrush="{StaticResource GeminiBackgroundColor}"/>

                <Button x:Name="GoButton" Grid.Column="4" Content="Ir"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{Binding ElementName=AddressBar, Path=Text}"
                        Width="40" Height="30" Margin="0,0,5,0"
                        ToolTip="Ir a la URL"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <Button x:Name="NewTabButton" Grid.Column="5" Content="+"
                        Command="{Binding NewTabCommand}"
                        Width="30" Height="30" Margin="0,0,5,0"
                        ToolTip="Nueva pestaña"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <Button x:Name="HistoryButton" Grid.Column="6" Content="&#x1F5DA;"
                        Click="HistoryButton_Click"
                        Width="30" Height="30" Margin="0,0,5,0"
                        ToolTip="Historial"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <Button x:Name="SettingsButton" Grid.Column="7" Content="&#x2699;"
                        Click="SettingsButton_Click"
                        Width="30" Height="30" Margin="0,0,5,0"
                        ToolTip="Configuración"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>

                <Button x:Name="FindButton" Grid.Column="8" Content="&#x1F50D;"
                        Click="FindButton_Click"
                        Width="30" Height="30"
                        ToolTip="Buscar en la página"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="{StaticResource GeminiBackgroundColor}"
                        BorderBrush="{StaticResource GeminiBackgroundColor}"
                        Foreground="{StaticResource GeminiForegroundColor}"/>
            </Grid>

            <Border x:Name="FindBar"
                    Grid.Row="3"
                    Grid.Column="0"
                    Background="{StaticResource GeminiBackgroundColor}"
                    BorderBrush="{StaticResource DefaultBrowserForegroundColor}"
                    BorderThickness="0,1,0,0"
                    Padding="10"
                    Visibility="Collapsed"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBox x:Name="FindTextBox"
                             Width="200"
                             Margin="0,0,5,0"
                             VerticalContentAlignment="Center"
                             KeyDown="FindTextBox_KeyDown"
                             TextChanged="FindTextBox_TextChanged"
                             Foreground="{StaticResource DefaultBrowserForegroundColor}"
                             Background="{StaticResource DefaultBrowserBackgroundColor}"
                             BorderBrush="{StaticResource DefaultBrowserForegroundColor}"/>
                    <Button Content="▲"
                            Click="FindPreviousButton_Click"
                            Margin="0,0,5,0"
                            ToolTip="Find previous"/>
                    <Button Content="▼"
                            Click="FindNextButton_Click"
                            Margin="0,0,5,0"
                            ToolTip="Find next"/>
                    <Button Content="✖"
                            Click="CloseFindBarButton_Click"
                            ToolTip="Close search"/>
                </StackPanel>
            </Border>

            <TabControl x:Name="BrowserTabs"
                        Grid.Row="3" Grid.Column="0"
                        ItemsSource="{Binding TabGroupManager.SelectedTabGroup.TabsInGroup}"
                        SelectedItem="{Binding SelectedTabItem, Mode=TwoWay}"
                        SelectionChanged="BrowserTabControl_SelectionChanged_Grouped"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        ItemTemplate="{StaticResource TabHeaderTemplate}"
                        ItemContainerStyle="{StaticResource TabItemStyle}"
                        ContentTemplate="{StaticResource TabContentTemplate}">
            </TabControl>

            <ProgressBar Grid.Row="4"
                         Height="5"
                         Value="{Binding DownloadProgress}"
                         Visibility="{Binding DownloadProgressBarVisibility}"
                         Background="#333" Foreground="#007bff"
                         BorderThickness="0"
                         Margin="0,0,0,0"
                         VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</Window>
