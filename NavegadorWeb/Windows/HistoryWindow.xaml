<Window x:Class="NavegadorWeb.Windows.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Historial" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="HistoryListView"
                  Grid.Row="0"
                  MouseDoubleClick="HistoryListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="TÃ­tulo" Width="250" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="URL" Width="400" DisplayMemberBinding="{Binding Url}" />
                    <GridViewColumn Header="Fecha y Hora" Width="150" DisplayMemberBinding="{Binding Timestamp}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="ClearHistoryButton" Content="Borrar Historial" Click="ClearHistoryButton_Click" Margin="0,0,10,0" />
            <Button x:Name="CloseButton" Content="Cerrar" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
